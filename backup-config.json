{
  "version": "1.0.0",
  "description": "Backup configuration for custom-tools backup system",
  "last_updated": "2025-01-16",
  
  "backup_modes": {
    "secure": {
      "description": "Safe backup mode excluding sensitive credentials",
      "excludes_sensitive": true,
      "categories": {
        "dotfiles": [
          ".bashrc",
          ".bash_profile", 
          ".bash_logout",
          ".profile",
          ".zshrc",
          ".p10k.zsh",
          ".gitconfig",
          ".npmrc",
          ".yarnrc",
          ".nvidia-settings-rc",
          ".fonts.conf",
          ".gtkrc-2.0",
          ".claude.json",
          ".flutter",
          ".vimrc",
          ".tmux.conf"
        ],
        "configurations": [
          ".config",
          ".local/share",
          ".local/bin",
          ".fonts",
          ".pki"
        ],
        "development_safe": [
          ".cargo/config.toml",
          ".npm/npmrc",
          ".yarn/config",
          ".bun",
          ".pub-cache",
          ".dart-tool",
          ".vscode-oss"
        ],
        "claude_ai": [
          ".claude",
          ".config/claude"
        ]
      },
      "exclusions": [
        "*.cache",
        "*Cache*",
        "*.log",
        "node_modules",
        ".local/share/Trash",
        ".config/*/Cache",
        ".config/*/cache",
        ".config/chromium",
        ".config/google-chrome",
        ".mozilla/firefox/*/cache*",
        ".yarn/cache",
        ".npm/_cacache",
        ".cargo/registry/cache",
        ".cache",
        ".var/app/*/cache",
        ".git-credentials",
        ".aws/credentials",
        ".docker/config.json"
      ]
    },
    
    "complete": {
      "description": "Complete backup including sensitive credentials (handle with care)",
      "excludes_sensitive": false,
      "security_warning": "This mode includes SSH keys, GPG keys, and other sensitive credentials. Use encryption and secure storage.",
      "categories": {
        "dotfiles": [
          ".bashrc",
          ".bash_profile",
          ".bash_logout", 
          ".profile",
          ".zshrc",
          ".p10k.zsh",
          ".gitconfig",
          ".git-credentials",
          ".npmrc",
          ".yarnrc",
          ".nvidia-settings-rc",
          ".fonts.conf",
          ".gtkrc-2.0",
          ".claude.json",  
          ".flutter",
          ".vimrc",
          ".tmux.conf"
        ],
        "configurations": [
          ".config",
          ".local/share",
          ".local/bin",
          ".fonts",
          ".pki"
        ],
        "credentials": [
          ".ssh",
          ".gnupg",
          ".kube", 
          ".talos",
          ".aws",
          ".docker"
        ],
        "development_complete": [
          ".cargo",
          ".npm",
          ".yarn/config",
          ".bun",
          ".pub-cache",
          ".dart-tool",
          ".vscode-oss"
        ],
        "claude_ai": [
          ".claude",
          ".config/claude"
        ]
      },
      "exclusions": [
        "*.cache",
        "*Cache*",
        "*.log", 
        "node_modules",
        ".local/share/Trash",
        ".config/*/Cache",
        ".config/*/cache",
        ".config/chromium",
        ".config/google-chrome",
        ".mozilla/firefox/*/cache*",
        ".yarn/cache",
        ".npm/_cacache",
        ".cargo/registry/cache",
        ".cache",
        ".var/app/*/cache"
      ]
    }
  },
  
