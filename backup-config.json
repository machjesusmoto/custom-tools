  "security_classifications": {
    "high": {
      "description": "Contains sensitive credentials, keys, or authentication data",
      "requires_encryption": true,
      "storage_warning": "Must be stored securely with strong encryption",
      "examples": [".ssh", ".gnupg", ".aws", ".kube", "1Password", "Termius"]
    },
    "medium": {
      "description": "Contains personal data or application tokens",
      "requires_encryption": "recommended", 
      "storage_warning": "Should be encrypted for additional security",
      "examples": [".config/gh-copilot", "Docker Desktop", "Flatpak data"]
    },
    "low": {
      "description": "Configuration files with minimal sensitive data",
      "requires_encryption": false,
      "storage_warning": "Standard backup security practices apply",
      "examples": ["editor configs", "theme settings", "terminal configs"]
    }
  },
  
  "backup_strategies": {
    "daily_secure": {
      "description": "Daily backup using secure mode for regular system state",
      "mode": "secure",
      "frequency": "daily",
      "retention": "7 days",
      "encryption": false
    },
    "weekly_complete": {
      "description": "Weekly complete backup including credentials",
      "mode": "complete", 
      "frequency": "weekly",
      "retention": "4 weeks",
      "encryption": true,
      "storage": "offline"
    },
    "pre_migration": {
      "description": "Full system backup before major changes",
      "mode": "complete",
      "frequency": "on-demand",
      "retention": "indefinite",
      "encryption": true,
      "storage": "multiple_locations"
    }
  },
  
  "validation": {
    "required_tools": ["tar", "sha256sum", "find", "du"],
    "optional_tools": ["gpg", "jq", "pv", "numfmt"],
    "minimum_disk_space": "100MB",
    "supported_compression": ["gzip", "xz"],
    "supported_encryption": ["gpg-symmetric", "gpg-public-key"]
  }
}